{
  "name": "@talkingthreads/goblin",
  "version": "0.3.0-rc.4",
  "description": "Developer-first MCP gateway that aggregates multiple MCP servers behind a single unified endpoint",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "goblin": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify --sourcemap=external",
    "build:cli": "bun build src/cli/index.ts --outdir dist/cli --target node --minify --sourcemap=external",
    "build:analyze": "bun build src/index.ts --outdir dist --target node --minify --analyze",
    "start": "bun dist/index.js",
    "cli": "bun dist/cli/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "quality:install": "bun tools/quality-check/install.js",
    "quality:check": "bun tools/quality-check/quality-check.js",
    "quality:fix": "bun run biome check --write src/",
    "test:unit": "bun test tests/unit",
    "pretest:unit": "bun run build:cli",
    "test:e2e": "bun test tests/e2e",
    "test:e2e:cli": "bun test tests/e2e/cli-tui",
    "pretest:e2e": "bun run build:cli",
    "pretest:e2e:cli": "bun run build:cli",
    "smoke": "bun run tests/smoke/run-smoke-tests.ts",
    "perf": "bun run tests/performance/run-performance-tests.ts",
    "perf:quick": "PERFORMANCE_TEST_FAST_MODE=true bun test tests/performance/latency --reporter=dot",
    "perf:quick:all": "PERFORMANCE_TEST_FAST_MODE=true bun test tests/performance --reporter=dot",
    "perf:quick:latency": "PERFORMANCE_TEST_FAST_MODE=true bun test tests/performance/latency --filter \"@quick\"",
    "perf:quick:load": "PERFORMANCE_TEST_FAST_MODE=true bun test tests/performance/load --filter \"@quick\"",
    "perf:quick:memory": "PERFORMANCE_TEST_FAST_MODE=true bun test tests/performance/memory --filter \"@quick\"",
    "perf:full": "bun test tests/performance --filter \"@full\"",
    "perf:full:latency": "bun test tests/performance/latency --filter \"@full\"",
    "perf:full:load": "bun test tests/performance/load --filter \"@full\"",
    "perf:full:memory": "bun test tests/performance/memory --filter \"@full\"",
    "perf:extended": "bun test tests/performance --filter \"@extended\"",
    "perf:extended:latency": "bun test tests/performance/latency --filter \"@extended\"",
    "perf:extended:load": "bun test tests/performance/load --filter \"@extended\"",
    "perf:extended:memory": "bun test tests/performance/memory --filter \"@extended\"",
    "perf:load": "bun test tests/performance/load",
    "perf:memory": "bun test tests/performance/memory",
    "perf:latency": "bun test tests/performance/latency",
    "perf:throughput": "bun test tests/performance/throughput",
    "perf:baseline": "bun test tests/performance/baseline",
    "typecheck": "tsc --noEmit",
    "coverage": "bun test --coverage",
    "coverage:unit": "bun test tests/unit --coverage",
    "coverage:report": "bun test --coverage && open coverage/index.html",
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gateway",
    "proxy",
    "ai-tools",
    "llm"
  ],
  "author": "TalkingThreads",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalkingThreads/goblin.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "proactive-quality": {
    "name": "proactive-quality-system",
    "version": "1.0.0",
    "description": "Proactive quality improvement system with immediate feedback loops",
    "main": "src/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^14.0.2",
    "env-paths": "^4.0.0",
    "hono": "^4.11.7",
    "ink": "^6.6.0",
    "ink-table": "^3.1.0",
    "minisearch": "^7.2.0",
    "pino": "^10.3.0",
    "react": "^19.2.4",
    "react-devtools-core": "^7.0.1",
    "react-reconciler": "^0.33.0",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@modelcontextprotocol/server-everything": "^2026.1.26",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "autocannon": "^8.0.0",
    "bun-types": "^1.3.8",
    "pino-pretty": "^11.3.0",
    "typescript": "^5.9.3"
  }
}
